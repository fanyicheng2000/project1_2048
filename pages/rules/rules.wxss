/* pages/rules/rules.wxss */

page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
}

.rules-header {
  padding: 30rpx 0;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #776E65;
}

.rules-content {
  flex: 1;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.rule-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #776E65;
  margin-bottom: 20rpx;
}

.section-subtitle {
  font-size: 32rpx;
  font-weight: bold;
  color: #776E65;
  margin: 20rpx 0 10rpx;
}

.section-content {
  font-size: 28rpx;
  color: #776E65;
  line-height: 1.6;
  margin-left: 20rpx;
}

.content-item {
  margin-top: 10rpx;
}

.back-button {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #8F7A66;
  color: white;
  font-size: 32rpx;
  border-radius: 10rpx;
  margin: 30rpx auto;
}

.back-button:active {
  opacity: 0.8;
}