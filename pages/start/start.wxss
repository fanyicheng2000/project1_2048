.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.logo {
  font-size: 80px;
  font-weight: bold;
  color: #776E65;
  margin-bottom: 40px;
}

.loading-animation {
  position: relative;
  width: 60px;
  height: 60px;
}

.loading-block {
  position: absolute;
  width: 40px;
  height: 40px;
  background-color: #F59563;
  border-radius: 6px;
  animation: rotate 2s infinite linear;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg) scale(1);
  }
  50% {
    transform: rotate(180deg) scale(1.2);
  }
  100% {
    transform: rotate(360deg) scale(1);
  }
}