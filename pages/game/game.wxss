/**game.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 顶部区域 */
.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 70rpx;
  font-weight: bold;
  color: #776E65;
}

.score-container {
  display: flex;
}

.score-box {
  background-color: #BBADA0;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  margin-left: 20rpx;
  text-align: center;
  min-width: 120rpx;
}

.score-label {
  color: #EEE4DA;
  font-size: 24rpx;
}

.score-value {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

/* 操作按钮 */
.button-container {
  display: flex;
  margin-bottom: 10rpx;
}

.game-button {
  background-color: #F59563;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
}

/* 难度选择器 */
.difficulty-container {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
  justify-content: center;
}

.difficulty-label {
  font-size: 28rpx;
  color: #776E65;
  margin-right: 10rpx;
}

.difficulty-options {
  display: flex;
}

.difficulty-option {
  background-color: #EEE4DA;
  color: #776E65;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  margin: 0 6rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.difficulty-option.active {
  background-color: #F59563;
  color: white;
  font-weight: bold;
}

/* 游戏棋盘 */
.game-board {
  position: relative;
  width: 488rpx;
  height: 488rpx;
  background-color: #BBADA0;
  border-radius: 10rpx;
  margin: 20rpx 0;
  padding: 10rpx;
}

.grid-container {
  position: absolute;
  width: 100%;
  height: 100%;
}

.grid-row {
  display: flex;
  height: 122rpx;
}

.grid-cell {
  width: 106rpx;
  height: 106rpx;
  background-color: #CDC1B4;
  border-radius: 6rpx;
  margin: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.empty-cell-image {
  width: 80%;
  height: 80%;
}

.tile-container {
  position: absolute;
  width: 100%;
  height: 100%;
}

.tile {
  position: absolute;
  width: 106rpx;
  height: 106rpx;
  border-radius: 6rpx;
  font-size: 45rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: transform 0.15s ease, top 0.15s ease, left 0.15s ease;
  margin: 8rpx;
}

/* 新格子的动画效果 */
.tile-new {
  animation: appear 0.2s ease;
}

@keyframes appear {
  0% {
    transform: scale(0);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

/* 合并时的动画效果 */
.tile-merged {
  animation: pop 0.2s ease;
}

@keyframes pop {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

.tile-inner {
  text-align: center;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tile-image {
  width: 90%;
  height: 90%;
}

